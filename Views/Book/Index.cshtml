@model List<BooksEntity>;

@{
    ViewData["Title"] = "Books";
}

<h2> books </h2>
<div class="row">
    <div class="col-md-12">
        <a asp-action="Create" asp-controller="Book" class="btn-btn-success">Create Book</a>

    </div>
</div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <td>Book Title</td>
                        <td>Book Author</td>
                        <td>Book Genre</td>
                        <td>Book ISBN</td>
                        <td>Date Published</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Author</td>
                            <td>@item.Genre</td>
                            <td>@item.ISBN</td>
                            <td>@item.DatePublished</td>
                            <td>
                                <a asp-action="Delete" asp-controller="Book"
                                asp-route-id="@item.Id"  class="btn btn-danger">
                                    Delete
                                </a>
                                <a asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>