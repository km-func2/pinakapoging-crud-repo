@model List<BooksEntity>;

@{
    ViewData["Title"] = "Books";
}

    <div class="container pt-3">
        <div class="row mx-auto mb-3">
            <div class="col px-0"><h2> books </h2></div>
            <div class="col px-0 d-flex justify-content-end">
                <a asp-action="Create" asp-controller="Book" class="btn btn-success">Create Book</a>
            </div>
        </div>

        <div class="">
            <div class="mx-auto">
                @foreach(var item in Model){
                    <div class="d-flex">
                        <img
                            class="rounded-start" 
                            src="" 
                            alt="placeholder photo"
                            />
                        <div class="d-flex rounded-end flex-md-row flex-column border p-md-3 p-2 w-100 ">
                            <div class="d-flex flex-md-row flex-column flex-grow-1">
                                <div class="m-auto">
                                    <p>
                                        <span class="d-block">Title: </span>
                                        @item.Title
                                    </p>
                                    <p>
                                        <span class="d-block">Author: </span>
                                        @item.Author
                                    </p>
                                </div>
                                <div class="m-auto">
                                    <p>
                                        <span class="d-block">ISBN: </span>
                                        @item.ISBN
                                    </p>
                                    <p>
                                        <span class="d-block">Date Published: </span>
                                        @item.DatePublished
                                    </p>
                                </div>
                            </div> 
                            <div class="d-flex flex-row flex-md-column gap-2">
                                <a asp-action="Edit" asp-controller="Book" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                                <a asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id"  class="btn btn-danger">
                                    Delete
                                </a>
                            </div> 
                        </div>
                    </div>
                     
                }
            </div>
        </div>
    </div>
    